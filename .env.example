# Environment Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
HOST=127.0.0.1
PORT=5000

# Database Configuration
# Local development (Docker PostgreSQL):
ASYNC_DATABASE_URL=postgresql+asyncpg://buildsure_user:buildsure_password@localhost:5432/buildsure
SQL_ECHO=true

# Production example (uncomment and update with your production database):
# ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@host:port/database

# API Configuration
API_VERSION=v1

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=2048
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40
